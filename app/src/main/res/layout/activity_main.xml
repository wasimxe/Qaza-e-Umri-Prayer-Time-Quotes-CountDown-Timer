<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with App Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_launcher"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanxe Widgets"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalWidgetsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 widgets active"
                    android:textColor="#888888"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Available Widgets Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Widgets"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap a card to add widget to home screen"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginBottom="16dp" />

        <!-- Widget Cards Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Countdown Widget Card -->
            <LinearLayout
                android:id="@+id/cardCountdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Countdown"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timer widget"
                    android:textColor="#aaaaaa"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/countCountdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 active"
                    android:textColor="#4CAF50"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Prayer Times Widget Card -->
            <LinearLayout
                android:id="@+id/cardPrayer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prayer Times"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salah timings"
                    android:textColor="#aaaaaa"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/countPrayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 active"
                    android:textColor="#4CAF50"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Quotes Widget Card -->
            <LinearLayout
                android:id="@+id/cardQuotes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quotes"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom text"
                    android:textColor="#aaaaaa"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/countQuotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 active"
                    android:textColor="#4CAF50"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Qaza-e-Umri Widget Card -->
            <LinearLayout
                android:id="@+id/cardQaza"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qaza-e-Umri"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prayer counter"
                    android:textColor="#aaaaaa"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/countQaza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 active"
                    android:textColor="#4CAF50"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Global Font Size Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Font Size"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set default font size for new widgets"
                android:textColor="#888888"
                android:textSize="11sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textColor="#888888"
                    android:textSize="12sp" />

                <SeekBar
                    android:id="@+id/globalFontSizeSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="50"
                    android:layout_marginHorizontal="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textColor="#888888"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Local Backup Section -->
        <LinearLayout
            android:id="@+id/backupSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local Backup"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save/restore all widget settings to file"
                android:textColor="#888888"
                android:textSize="11sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/lastBackupTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last backup: Never"
                android:textColor="#666666"
                android:textSize="11sp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBackup"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Backup"
                    android:textColor="#ffffff"
                    android:backgroundTint="#4CAF50"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnRestore"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Restore"
                    android:textColor="#ffffff"
                    android:backgroundTint="#2196F3"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Existing Widgets Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Widgets"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/widgetsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/noWidgetsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No widgets added yet.\nLong press on home screen and select widgets to add."
                android:textColor="#666666"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="24dp" />
        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanxe Widgets v1.0"
            android:textColor="#444444"
            android:textSize="11sp"
            android:gravity="center"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
