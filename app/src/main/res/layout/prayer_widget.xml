<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    android:id="@+id/prayerWidget"
    android:background="@color/default_bg_color">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp">

        <TextView
            android:id="@+id/leftHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noori"
            android:text="Time Left"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/default_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/centerHeaderText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noori"
            android:text=""
            android:textAlignment="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/default_text_color"
            android:textSize="14sp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/rightHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noori"
            android:textAlignment="textStart"
            android:text="Islamic Date Today"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/default_text_color"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middletimes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:background="@color/default_bg_color2"
        android:gravity="center"
        android:weightSum="6"
        android:orientation="horizontal"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/temp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noori"
                android:text="عشاء"
                android:singleLine="true"
                android:textColor="@color/default_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/isha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:30"
                android:singleLine="true"
                android:textColor="@color/default_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/temp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مغرب"
                android:fontFamily="@font/noori"
                android:singleLine="true"
                android:textColor="@color/default_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/maghrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:30"
                android:singleLine="true"
                android:textColor="@color/default_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/temp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عصر"
                android:fontFamily="@font/noori"
                android:singleLine="true"
                android:textColor="@color/default_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/asr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:30"
                android:singleLine="true"
                android:textColor="@color/default_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/temp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ظہر"
                android:fontFamily="@font/noori"
                android:singleLine="true"
                android:textColor="@color/default_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dhuhr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:30"
                android:singleLine="true"
                android:textColor="@color/default_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/temp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="طلوع"
                android:fontFamily="@font/noori"
                android:singleLine="true"
                android:textColor="@color/default_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:30"
                android:singleLine="true"
                android:textColor="@color/default_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/temp6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="فجر"
                android:fontFamily="@font/noori"
                android:singleLine="true"
                android:textColor="@color/default_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fajr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:30"
                android:singleLine="true"
                android:textColor="@color/default_text_color"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
